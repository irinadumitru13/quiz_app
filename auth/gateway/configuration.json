{
	"version": 2,
	"timeout": "3000ms",
	"cache_ttl": "300s",
	"output_encoding": "json",
	"name": "Gateway",
	"endpoints": [
		{
			"endpoint": "/ip",
			"method": "GET",
			"output_encoding": "no-op",
			"extra_config": {},
			"backend": [
				{
					"url_pattern": "/json",
					"encoding": "no-op",
					"sd": "dns",
					"method": "GET",
					"extra_config": {},
					"host": [
						"https://ipinfo.io"
					]
				}
			]
		},
		{
			"endpoint": "/auth/login",
			"method": "POST",
			"output_encoding": "no-op",
			"extra_config": {},
			"backend": [
				{
					"url_pattern": "/auth/login",
					"encoding": "no-op",
					"sd": "static",
					"method": "POST",
					"extra_config": {},
					"host": [
						"http://login-manager:8002"
					],
					"disable_host_sanitize": true
				}
			]
		},
		{
			"endpoint": "/auth/register",
			"method": "POST",
			"output_encoding": "no-op",
			"extra_config": {},
			"backend": [
				{
					"url_pattern": "/auth/register",
					"encoding": "no-op",
					"sd": "static",
					"method": "POST",
					"extra_config": {},
					"host": [
						"http://login-manager:8002"
					],
					"disable_host_sanitize": true
				}
			]
		},
		{
			"endpoint": "/quiz/api/quiz",
			"method": "GET",
			"output_encoding": "no-op",
			"extra_config": {},
			"backend": [
				{
					"url_pattern": "/api/quiz",
					"encoding": "no-op",
					"sd": "static",
					"method": "GET",
					"extra_config": {},
					"host": [
						"http://quiz-service:80"
					],
					"disable_host_sanitize": true
				}
			],
			"headers_to_pass": [
				"*"
			]	
		},
		{
			"endpoint": "/quiz/api/quiz/{id}",
			"method": "GET",
			"output_encoding": "no-op",
			"extra_config": {},
			"backend": [
				{
					"url_pattern": "/api/quiz/{id}",
					"encoding": "no-op",
					"sd": "static",
					"method": "GET",
					"extra_config": {},
					"host": [
						"http://quiz-service:80"
					],
					"disable_host_sanitize": true
				}
			],
			"headers_to_pass": [
				"*"
			]	
		},
		{
			"endpoint": "/quiz/api/quiz",
			"method": "POST",
			"output_encoding": "no-op",
			"extra_config": {},
			"backend": [
				{
					"url_pattern": "/api/quiz",
					"encoding": "no-op",
					"sd": "static",
					"method": "POST",
					"extra_config": {},
					"host": [
						"http://quiz-service:80"
					],
					"disable_host_sanitize": true
				}
			],
			"headers_to_pass": [
				"*"
			]
		}
	],
	"extra_config": {
		"github_com/devopsfaith/krakend/router/gin": {
			"auto_options": true
		},
		"github_com/devopsfaith/krakend-cors": {
			"allow_origins": [
				"*"
			],
			"allow_methods": [
				"*"
			],
			"allow_headers": [
				"*"
			]
		},
    "github_com/letgoapp/krakend-influx":{
      "address": "http://gateway-influx:8086",
      "ttl": "25s",
      "buffer_size": 0
    },
    "github_com/devopsfaith/krakend-metrics": {
      "collection_time": "30s",
      "proxy_disabled": false,
      "router_disabled": false,
      "backend_disabled": false,
      "endpoint_disabled": false
    }
	}
}
